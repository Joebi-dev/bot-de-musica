{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "rootDir": "app",
    "outDir": "bot",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noEmitOnError": true
  },
  "include": [
    "app/**/*",
    "./*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "bot"
  ]
}